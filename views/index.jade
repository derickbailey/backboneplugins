extends layout

block javascript
  script.
    $(function() {
      $('a[href*=#]:not([href=#])').click(function() {
        if (location.pathname.replace(/^\//,'') == this.pathname.replace(/^\//,'') && location.hostname == this.hostname) {
          var target = $(this.hash);
          target = target.length ? target : $('[name=' + this.hash.slice(1) +']');
          if (target.length) {
            $('html,body').animate({
              scrollTop: target.offset().top
            }, 1000);
            return false;
          }
        }
      });
    });

block content
  .container

    include _section-one

    a(name="content")
    include _section-two

    a(name="history")
    include _section-three

    a(name="reviews")
    include _section-four

    a(name="buynow")
    include _section-five
